{% extends "layouts/base.twig" %}

{% block content %}
    <h2>{{ title }}</h2>

    <form method="POST" action="{{ base_url }}characters" style="max-width: 600px; margin-top: 20px; background: #2d2d2d; padding: 30px; border-radius: 8px; border: 2px solid #d4af37;">
        <div style="margin-bottom: 20px;">
            <label style="display: block; margin-bottom: 8px; color: #d4af37;">Name:</label>
            <input type="text" name="name" required style="width: 100%; padding: 10px; background: #1a1a1a; border: 1px solid #555; color: #e0e0e0; border-radius: 4px;">
        </div>

        <div style="margin-bottom: 20px;">
            <label style="display: block; margin-bottom: 8px; color: #d4af37;">Rasse:</label>
            <input type="text" name="race" required style="width: 100%; padding: 10px; background: #1a1a1a; border: 1px solid #555; color: #e0e0e0; border-radius: 4px;">
        </div>

        <div style="margin-bottom: 20px;">
            <label style="display: block; margin-bottom: 8px; color: #d4af37;">Profession:</label>
            <input type="text" name="profession" required style="width: 100%; padding: 10px; background: #1a1a1a; border: 1px solid #555; color: #e0e0e0; border-radius: 4px;">
        </div>

        <div style="margin-bottom: 20px;">
            <label style="display: block; margin-bottom: 8px; color: #d4af37;">Abenteuerpunkte:</label>
            <input type="number" name="experience" value="0" style="width: 100%; padding: 10px; background: #1a1a1a; border: 1px solid #555; color: #e0e0e0; border-radius: 4px;">
        </div>

        <div style="display: flex; gap: 10px;">
            <button type="submit" style="background: #d4af37; color: #1a1a1a; padding: 12px 24px; border: none; cursor: pointer; border-radius: 4px; font-size: 16px;">
                Charakter erstellen
            </button>
            <a href="{{ base_url }}characters" style="background: #555; color: #fff; padding: 12px 24px; text-decoration: none; border-radius: 4px; display: inline-block;">Abbrechen</a>
        </div>
    </form>
{% endblock %}